                  </div>
                </div>

            

                <div class="field is-horizontal is-mobile">
                  <div class="field-label is-small">
                    <label for="age" class="has-text-weight-bold">Age</label>
                  </div>
                  <div class="field-body">
                    <div class="field columns is-mobile is-vcentered">
                        <div class="column is-one-fifth pl-5"><input id="age" name="age" class="input is-success is-small" type="number" min="0" max="16"></div>
                        <div class="column">years <button class="button is-primary is-small ml-5" type="submit">Submit</button></div>
                        
                    </div>
                    
                  </div>
                </div>
                <div class="container has-text-right">
                
              </div>
               </form> 
               
            </div>



    

            <div class="box columns mx-0">
              <div class="column">
              
              <!-- premeds -->
<div class="box">
  
  <table class="table is-size-7 is-fullwidth">
    <tr>
       <th>Drug</th>
       <th>Amount</th>
       
    </tr>
 
    <% for (let premed of premeds) { %>
     <tr>
       <td><%= premed.name %></td>
       <td>

         <% if  (premed.amount > premed.max) { %>
          <%= premed.max %><%= premed.units %>
        <% } else { %>
            <%= premed.amount %><%= premed.units %>
         <%  } %>
           
        
        </td>
  
     </tr>    
    <% } %>
 </table>


</div>

<!-- emergency drugs -->
<div class="box">
  
  <table class="table is-size-7 is-fullwidth">
    <tr>
       <th>Drug</th>
       <th>Amount</th>
       <th>Volume (mls)</th>
    </tr>
 
    <% for (let e of emergencyDrugs) { %>
     <tr>
       <td><%= e.name %></td>
       <td> <% if  (e.amount > e.max) { %>
        <%= e.max %><%= e.units %>
      <% } else { %>
          <%= e.amount %><%= e.units %>
       <%  } %></td>
      
       <td>
         
        <% if  (e.amount > e.max) { %>
        <%= e.maxvolume %>
      <% } else { %>
          <%= e.volume %>
       <%  } %>
      
      </td>
     </tr>    
    <% } %>
 </table>


</div>
<!-- induction drugs-->

<div class="box">
  
  <table class="table is-size-7 is-fullwidth">
    <tr>
       <th>Drug</th>
       <th>Amount</th>
       
       <th>Volume (mls)</th>
    </tr>
 
    <% for (let i of inductionDrugs) { %>
     <tr>
      <td><%= i.name %></td>
      <td> <% if  (i.amount > i.max) { %>
       <%= i.max %><%= i.units %>
     <% } else { %>
         <%= i.amount %><%= i.units %>
      <%  } %></td>
       
      <td>
    
        <% if  (i.amount > i.max) { %>
        <%= i.maxvolume %>
      <% } else { %>
          <%= i.volume %>
       <%  } %>
      
      </td>
       
     </tr>    
    <% } %>
 </table>


</div>
            
            
