      <!-- start of main content -->
      
      <div class="notification is-primary">
     
        <div class="columns">
          <div class="column">
            <!-- column 1 -->

            <div class="box pt-4">
          
             
              <!-- start of form -->
              <form action="/" method="POST">

                <div class="field is-horizontal is-mobile">
                  <div class="field-label">  
                    <label for="weight" class="has-text-weight-bold">Weight</label>
                  </div>
                  <div class="field-body">
                    <div class="field columns is-mobile is-vcentered">
                        <div class="column is-one-fifth pl-3"><input id="weight" name="weight" class="input is-success is-small" required type="number" min="0" max="100" step="0.1" value=" "></div>
                        <div class="column">kg</div>
                    </div> 
                  </div>
                </div>

             

                <div class="field is-horizontal is-mobile">
                  <div class="field-label">
                    <label for="age" class="has-text-weight-bold">Age</label>
                  </div>
                  <div class="field-body">
                    <div class="field columns is-mobile is-vcentered">
                        <div class="column is-one-fifth pl-3"><input id="age" name="age" class="input is-success is-small" required type="number" min="0" max="16"></div>
                        <div class="column">years <button class="button is-primary is-small ml-5" id="submit" type="submit">Submit</button></div>
                        
                    </div>
                    

                  </div>
                </div>
               
               </form> 
               
            </div>
            <%- include ("partials/jump-to") -%> 
         

            <div class="box columns mx-0">
              <div class="column">
              

                
              <!-- premeds -->
<div class="box">
  <table class="table is-size-7 has-text-left is-fullwidth">
    <tr>
       <th>Drug</th>
       <th>Amount</th> 
    </tr>

    <% for (let premed of premeds) { %>
      <tr>
       <td><%= premed.name %></td>
       <td><%= premed.amount %> <%=premed.units %></td>
      </tr>    
     <% } %>

 </table>


</div>

<!-- emergency drugs -->
<div class="box">
  
  <table class="table is-size-7 is-fullwidth has-text-left">
    <tr>
       <th>Drug</th>
       <th>Amount</th>
       <th>Volume (mls)</th>
    </tr>
 
    <% for (let e of emergencyDrugs) { %>
     <tr>
      <td><%= e.name %></td>
       <td> <%= e.amount %> <%= e.units %></td>
      
       <td> <%= e.volume %> </td>
     </tr>    
    <% } %>
 </table>


</div>
<!-- induction drugs-->

<div class="box">
  
  <table class="table is-size-7 is-fullwidth has-text-left">
    <tr>
       <th>Drug</th>
       <th>Amount</th>
       
       <th>Volume (mls)</th>
    </tr>
 
    <% for (let i of inductionDrugs) { %>
      <tr>
       <td><%= i.name %></td>
        <td> <%= i.amount %> <%= i.units %></td>
        <td> <%= i.volume %> </td>
      </tr>    
     <% } %>
 </table>


</div>
            
            
<!-- antibiotics -->

<div class="box">
  
  <table class="table is-size-7 is-fullwidth has-text-left">
    <tr>
       <th>Drug</th>
       <th>Amount</th>
       
       
    </tr>
 
    <% for (let abx of antibiotics) { %>
     <tr>
      <td><%= abx.name %></td>
      <td> <%= abx.amount %>  <%= abx.units %></td>
       
     </tr>    
    <% } %>
 </table>


</div>
         
<!-- antiemetics -->
<div class="box">
  
  <table class="table is-size-7 is-fullwidth has-text-left">
    <tr>
       <th>Drug</th>
       <th>Amount</th>
       <th>Volume (mls)</th>
    </tr>
 
    <% for (let a of antiemetics) { %>
      <tr>
       <td><%= a.name %></td>
        <td> <%= a.amount %> <%= a.units %></td>
       
        <td> <%= a.volume %> </td>
      </tr>    
     <% } %>
      
 </table>
</div>


<!-- analgesia -->
<div class="box" id="analgesia">
  
  <table  class="table is-size-7 is-fullwidth has-text-left">
    <tr>
       <th>Drug</th>
       <th>Amount</th>
       <th>Volume (mls)</th>
       <th>Frequency</th>
    </tr>
 
    <% for (let p of painkillers) { %>
      <tr>
       <td><%= p.name %></td>
        <td> <%= p.amount %> <%= p.units %></td>
        <td> <%= p.volume %> </td>
        <td> <%= p.freq %> </td>
      </tr>    
  <% } %>
      
 </table>
</div>

<div class="box">
<p id="analgesia-instructions" class="is-size-7 has-text-dark has-text-weight-bold"> </p>
