
<%- include ("partials/header") -%> 


<!-- tabs -->
<div class="container mt-20">
  <%- include ("partials/which-child") -%> 
  
  <div class="tabs is-boxed my-0" id="topBox">
    <ul>
      <li class="is-active"><a href="/">Drugs</a></li>
      <li><a href="/airway">Airway + Fluids</a></li>
